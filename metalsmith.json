{
  "source": "src",
  "destination": "dist",
  "plugins": {
    "metalsmith-markdown": {
      "smartypants": true
    },
    "metalsmith-layouts": {
      "engine": "handlebars",
      "partials": "layouts/partials"
    },
    "metalsmith-sass": {
      "outputStyle": "expanded",
      "sourceMap": "true",
      "sourceMapContents": "true"
    }
  }
}
