{
  "source": "src",
  "destination": "dist",
  "plugins": {
    "metalsmith-markdown": {
      "smartypants": true
    },
    "metalsmith-sass": {
      "outputStyle": "expanded",
      "sourceMap": "true",
      "sourceMapContents": "true"
    },
    "metalsmith-babel": {
      "presets": ["es2015"]
    },
    "metalsmith-metadata": {
      "site": "site.yaml",
      "page": "page.yaml",
      "items": "list.json"
    },
    "metalsmith-layouts": {
      "engine": "handlebars",
      "partials": "layouts/partials",
      "rename": true
    }
  }
}
